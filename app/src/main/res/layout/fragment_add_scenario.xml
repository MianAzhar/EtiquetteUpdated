                android:text="2"
                android:id="@+id/textView5"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="5dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:id="@+id/barFrame">

            <com.EA.Scenario.etiquette.utils.CustomSeekbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="4"
                android:progress="2"
                android:progressDrawable="@android:color/transparent"
                android:id="@+id/customSeekBar"
                android:layout_gravity="bottom"
                android:thumb="@drawable/empty_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/highllightred"
                android:layout_marginLeft="5dp"
                android:id="@+id/dot1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/highllightred"
                android:id="@+id/dot2"
                android:layout_marginLeft="85dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/highllightred"
                android:id="@+id/dot3"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/highllightred"
                android:layout_marginRight="85dp"
                android:id="@+id/dot4"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/highllightred"
                android:layout_marginRight="5dp"
                android:id="@+id/dot5"/>

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:src="@drawable/_10"
                android:id="@+id/textView6"
                android:layout_gravity="bottom" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:src="@drawable/_5"
                android:id="@+id/textView7"
                android:layout_gravity="bottom"
                android:layout_marginLeft="50dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/_0"
                android:id="@+id/textView8"
                android:layout_gravity="bottom"
                android:layout_marginLeft="55dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/__5"
                android:layout_marginLeft="55dp"
                android:layout_gravity="bottom"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/__10"
                android:layout_marginLeft="45dp"
                android:layout_gravity="bottom"/>
        </LinearLayout>

